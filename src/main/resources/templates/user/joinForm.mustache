{{>/user/header}}

<div class="container">
    <div class="my_auth_box">
        <div class="my_auth_form_box">
            <div class="my_auth_form_box_title">글하다</div>
            <div class="my_error_box my_hidden">
                
            </div>
            <form action="/join" method="post" onsubmit="return validation()">
                <input id="username" class="my_auth_form_box_input" type="text" name="username" placeholder="ID" maxlength="20" required />
                <input id="password" class="my_auth_form_box_input" type="password" name="password" placeholder="Password" maxlength="20" required />
                <input id="same-password" class="my_auth_form_box_input" type="password" name="" placeholder="Password Check" maxlength="20" required />
                <input class="my_auth_form_box_input" type="email" name="email" placeholder="E-mail" maxlength="60" required />
                <button type="submit" class="my_secondary_btn">회원가입</button>
            </form>
            <div class="my_auth_form_box_link">
                <div><a href="/login-form">로그인</a></div>
                <div>비밀번호 찾기</div>
            </div>
        </div>
    </div>
</div>

<script src="/js/joinForm.js"></script>

{{>/layout/footer}}